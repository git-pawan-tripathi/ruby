<h1>sign in</h1>

<%= form_with url: sign_in_path do |form|%>

    <% if flash[:alert] %>
            <div class="alert alert-danger">
                <strong>Danger!</strong><%= flash[:alert] %>
            </div>

    <% end %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email,class: "form-control", placeholder: "Enter email" %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password,class: "form-control",placeholder: "Enter password" %>
    </div>

    <div class="form-group">
      <%= link_to "forgot password", password_reset_path %>
    </div>

    <%= form.submit "sign in",class: "btn btn-default" %>
<% end %>