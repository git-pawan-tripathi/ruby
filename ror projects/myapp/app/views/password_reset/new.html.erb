<h1> forgot your password</h1>

<%= form_with url: password_reset_path do |form|%>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email,class: "form-control", placeholder: "Enter email" %>
    </div>

    <%= form.submit "forgot password",class: "btn btn-default" %>
<% end %>