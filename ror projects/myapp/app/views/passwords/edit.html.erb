<%= form_with model: Current.user,url: edit_password_path do |form|%>

    <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
            <div class="alert alert-danger">
                <strong>Danger!</strong><%= message %>
            </div>
        <% end %>

    <% end %>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password,class: "form-control",placeholder: "Enter password" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation,class: "form-control",placeholder: "Enter password" %>
    </div>

        <%= form.submit "update password",class: "btn btn-default" %>
<% end %>